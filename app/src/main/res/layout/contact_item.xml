<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:focusable="true"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivContactAvatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:src="@drawable/iv_avatar"
        android:layout_marginRight="4dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp" />



        <TextView
            android:id="@+id/tvDetailsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16sp"
            android:ellipsize="end"
            android:maxLength="12"
            android:maxLines="1"
            android:textStyle="bold"
            android:layout_toRightOf="@id/ivContactAvatar"
            android:layout_toEndOf="@id/ivContactAvatar"
            android:layout_marginEnd="16sp" />

        <TextView
            android:id="@+id/tvPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16sp"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/tvDetailsName"
            android:layout_toRightOf="@id/ivContactAvatar"
            android:layout_toEndOf="@id/ivContactAvatar"
            android:layout_marginEnd="16sp" />


        <ImageButton
            android:id="@+id/ibCall"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@drawable/phone"
            android:background="@null"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="16sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/image_button" />

    </RelativeLayout>


